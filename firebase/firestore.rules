rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Función para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }

    // PERFILES DE USUARIO
    match /usuarios/{userId} {
      allow read, update: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null && 
                   request.auth.uid == userId &&
                   request.resource.data.uid == request.auth.uid;
    }

    // PRESUPUESTOS
    match /presupuestos/{presupuestoId} {
      allow read, update, delete: if isAdmin() || (request.auth != null && resource.data.uidUsuario == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.uidUsuario == request.auth.uid;
    }

    // MASCOTAS (solo admin puede hacer cualquier operación)
    match /mascotas/{mascotaId} {
      allow read, write: if isAdmin();
    }

    // Reglas para la colección admin_logs
    match /admin_logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
} 